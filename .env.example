# Binance API credentials
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here

# Trading parameters (adjusted for more trades)
VOLUME=15
MIN_SIGNAL_STRENGTH=2
MIN_BACKTEST_SCORE=45.0
ENABLE_BACKTESTING=true
BACKTEST_DAYS=30
TAKE_PROFIT=0.02
STOP_LOSS=0.015
LEVERAGE=10
MARGIN_TYPE=ISOLATED
MAX_POSITIONS=5
MAX_POSITION_SIZE_PCT=2.0
MAX_DAILY_TRADES=10
MAX_CONCURRENT_POSITIONS=5
KLINE_INTERVAL=15m

# Technical Indicator parameters
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
BB_PERIOD=20
BB_STD=2.0
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
EMA_SHORT=50
EMA_LONG=200

# Volume and Market Filters
VOLUME_THRESHOLD=1.5

# Debug settings
DEBUG_MODE=true
FORCE_TRADES=false

# Apprise notification services (comma-separated)
# Examples:
# Telegram: tgram://bot_token/chat_id
# Discord: discord://webhook_id/webhook_token
# Slack: slack://token_a/token_b/token_c/channel
# Email: mailto://user:password@domain.com?to=recipient@domain.com
APPRISE_SERVICES=tgram://your_bot_token/your_chat_id

# Notification settings (true/false)
NOTIFY_ON_TRADES=true
NOTIFY_ON_ERRORS=true
NOTIFY_ON_STARTUP=true
NOTIFY_ON_BALANCE_LOW=true
TIMEZONE=UTC+3
